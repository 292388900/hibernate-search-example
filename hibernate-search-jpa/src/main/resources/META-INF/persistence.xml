<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="hibernate-search-jpa">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.hibernate.search.jpa.example.model.Author</class>
		<class>org.hibernate.search.jpa.example.model.Book</class>
		<properties>
		
			<property key="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
			<!-- <property key="hibernate.show_sql" value="true"/> -->
			<!-- <property key="hibernate.hbm2ddl.auto" value="update"/> -->
			<property key="hibernate.jdbc.batch_size" value="20"/>
			
			<!-- hibernate cache -->
			<property key="hibernate.cache.use_query_cache" value="true"/>
			<property key="hibernate.cache.use_second_level_cache" value="true"/>
			<property key="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider"/>
			<property key="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
			<property key="net.sf.ehcache.configurationResourceName" value="classpath:ehcache.xml"/>
			
			<!-- hibernate search configuration -->
			<property key="hibernate.search.lucene_version" value="LUCENE_36"/>
			<property key="hibernate.search.default.directory_provider" value="filesystem"/>
			<property key="hibernate.search.default.indexBase" value="target/lucene/indexes"/>
			
			<!-- hibernate search Index Optimization -->
			<property key="hibernate.search.default.optimizer.operation_limit.max" value="1000"/>
			<property key="hibernate.search.default.optimizer.transaction_limit.max" value="100"/>
			
		</properties>
	</persistence-unit>

</persistence>